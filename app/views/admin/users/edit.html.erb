<div class="max-w-md mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-4">Edit Role for <%= @user.email %></h1>

  <%= form_with(model: [:admin, @user], local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :role, "User Role", class: "block mb-1 font-medium" %>
      <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, {}, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.submit "Update Role", class: "bg-green-600 font-semibold px-5 py-2 rounded-md shadow-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-200" %>
    </div>

  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Users", admin_users_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
