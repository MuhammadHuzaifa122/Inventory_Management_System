<div class="container mt-4">
  <h2>Inventory Report</h2>

  <div class="mb-4">
    <label for="report-daterange" class="form-label"><h5>Select Date Range:</h5></label>
    <input type="text" id="report-daterange" class="form-control" placeholder="Choose date range" />
  </div>
  
<div class="mb-4">
  <label for="category-select" class="form-label fw-semibold text-primary">
    <i class="bi bi-tags-fill me-1"></i> Filter by Category:
  </label>
  <div class="input-group shadow-sm">
    <span class="input-group-text bg-light">
      <i class="bi bi-funnel-fill text-secondary"></i>
    </span>
    <select id="category-select" class="form-select">
      <option value="">All Categories</option>
      <% @categories.each do |category| %>
        <option value="<%= category.id %>" <%= 'selected' if params[:category_id].to_s == category.id.to_s %>>
          <%= category.name %>
        </option>
      <% end %>
    </select>
  </div>
</div>

  <div id="report-results">
  <% if @start_date && @end_date %>
    <h4 class="mb-4">
  Report from <%= @start_date %> to <%= @end_date %>
  <% if @selected_category %>
    for <span class="text-primary"><%= @selected_category.name %></span>
  <% end %>
</h4>


    <div class="card mb-4">
      <div class="card-header bg-success text-white">
        Stock In
      </div>
      <ul class="list-group list-group-flush">
        <% if @stock_ins.any? %>
          <% @stock_ins.each do |log| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>
                <strong><% if log.product.present? %>
                    <%= log.product.name %> – <%= log.quantity %> units on <%= log.created_at.to_date %>
                <% else %>
                    <em>Product deleted or missing</em> – <%= log.quantity %> units on <%= log.created_at.to_date %>
    <% end %> units
              </span>
              <span class="text-muted"><%= log.created_at.strftime('%B %d, %Y') %></span>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item text-muted">No stock in during this range.</li>
        <% end %>
      </ul>
    </div>

    <div class="card mb-4">
      <div class="card-header bg-danger text-white">
        Stock Out
      </div>
      <ul class="list-group list-group-flush">
        <% if @stock_outs.any? %>
          <% @stock_outs.each do |log| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>
                <strong><% if log.product.present? %>
                    <%= log.product.name %> – <%= log.quantity %> units on <%= log.created_at.to_date %>
                <% else %>
                    <em>Product deleted or missing</em> – <%= log.quantity %> units on <%= log.created_at.to_date %>
    <% end %> units
              </span>
              <span class="text-muted"><%= log.created_at.strftime('%B %d, %Y') %></span>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item text-muted">No stock out during this range.</li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="alert alert-info">No records found for the selected date range.</div>
  <% end %>
</div>

</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const categorySelect = document.getElementById("category-select");

    $('#report-daterange').daterangepicker({
      locale: { format: 'YYYY-MM-DD' },
      opens: 'left',
      autoApply: true
    }, function (start, end) {
      const categoryId = categorySelect.value;
      const url = `/reports?start_date=${start.format('YYYY-MM-DD')}&end_date=${end.format('YYYY-MM-DD')}&category_id=${categoryId}`;
      window.location.href = url;
    });

    // If user changes the category dropdown directly:
    categorySelect.addEventListener("change", function () {
      const picker = $('#report-daterange').data('daterangepicker');
      if (picker.startDate && picker.endDate) {
        const url = `/reports?start_date=${picker.startDate.format('YYYY-MM-DD')}&end_date=${picker.endDate.format('YYYY-MM-DD')}&category_id=${this.value}`;
        window.location.href = url;
      }
    });
  });
</script>




