<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="mb-4 bg-red-100 p-4 rounded">
      <h2 class="text-red-700">Please fix the following errors:</h2>
      <ul>
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block font-bold mb-1" %>
    <%= form.text_field :name, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :sku, class: "block font-bold mb-1" %>
    <%= form.text_field :sku, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block font-bold mb-1" %>
    <%= form.text_area :description, class: "w-full border rounded px-3 py-2" %>
  </div>

<div class="form-group">
  <%= form.label :category_id, "Category" %>
  <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "form-control" %>
</div>

  <div class="mb-4">
    <%= form.label :price, class: "block font-bold mb-1" %>
    <%= form.number_field :price, step: 0.01, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :stock, class: "block font-bold mb-1" %>
    <%= form.number_field :stock, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mt-6">
  <%= form.submit "Create Product", class: "text-black bg-white border border-gray-300 py-2 px-4 rounded" %>

</div>

<% end %>
