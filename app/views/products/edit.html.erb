<% content_for :title, "Edit Product" %>

<div class="container mt-5 max-w-2xl mx-auto bg-white shadow-md p-1 rounded">
  <h1 class="text-3xl font-bold mb-4 text-center ">Edit Product</h1>

  <%= form_with(model: @product, local: true, class: "space-y-4") do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "font-semibold" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :sku, class: "font-semibold" %>
      <%= form.text_field :sku, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "font-semibold" %>
      <%= form.text_area :description, rows: 3, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :category_id, "Category", class: "font-semibold" %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= form.label :price, class: "font-semibold" %>
      <%= form.number_field :price, step: 0.01, class: "form-control" %>
    </div>

    <div class="mt-4 flex justify-between">
      <%= form.submit "Update Product", class: "btn btn-primary" %>
      <%= link_to 'Back', products_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>


