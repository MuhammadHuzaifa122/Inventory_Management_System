<%= form_with url: products_path, method: :get, local: true, class: "form-inline mb-3 d-flex justify-content-end gap-2" do %>
  <div class="form-group mr-2">
    <%= label_tag :search, "Search", class: "sr-only" %>
    <%= text_field_tag :search, params[:search], placeholder: "Search by name...", class: "form-control" %>
  </div>

  <div class="form-group mr-2">
    <%= label_tag :category_id, "Category", class: "sr-only" %>
    <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name, params[:category_id]), prompt: "All Categories", class: "form-control" %>
  </div>

  <%= submit_tag "Filter", class: "btn btn-primary" %>
<% end %>
